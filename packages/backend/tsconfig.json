{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "#app/*": ["src/app/*"],
      "#config/*": ["src/config/*"],
      "#vendor/*": ["src/vendor/*"],
      "#database/*": ["src/database/*"],
      "#logger": ["src/vendor/utils/logger"],
      "#drizzle/*": ["src/drizzle/*"],
      "#shared/*": ["../shared/src/*"],
      "shared": ["../shared/src/index.ts"],
      "shared/responses": ["../shared/src/responses/index.ts"],
      "shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "skipLibCheck": true,
  "exactOptionalPropertyTypes": true,
  "references": [{ "path": "../shared" }]
}
